#!/usr/bin/env bash
# This script configures Nginx to redirect /redirect_me to another page.

# Ensure the script is run as root
if [ "$EUID" -ne 0 ]; then
  echo "Please run this script as root or using sudo."
  exit 1
fi

# Install Nginx if not already installed
if ! command -v nginx &> /dev/null; then
  apt-get update -y
  apt-get install -y nginx
fi

# Remove default Nginx config to avoid conflicts
rm -f /etc/nginx/sites-enabled/default

# Create a custom Nginx configuration for the redirection
cat > /etc/nginx/sites-available/redirect_me <<EOF
server {
    listen 80;
    server_name _;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    location / {
        root /var/www/html;
        index index.html index.htm;
    }
}
EOF

# Enable the new configuration
ln -sf /etc/nginx/sites-available/redirect_me /etc/nginx/sites-enabled/

# Test the Nginx configuration
nginx -t

# Restart Nginx to apply the changes
systemctl restart nginx

echo "Nginx configuration updated successfully."

