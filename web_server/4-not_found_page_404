#!/usr/bin/env bash
# This script configures Nginx with a custom 404 error page.

# Ensure the script is run as root
if [ "$EUID" -ne 0 ]; then
  echo "Please run this script as root or using sudo."
  exit 1
fi

# Install Nginx if not already installed
if ! command -v nginx &> /dev/null; then
  apt-get update -y
  apt-get install -y nginx
fi

# Remove default Nginx config to avoid conflicts
rm -f /etc/nginx/sites-enabled/default

# Create the custom 404 error page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Create a new Nginx configuration file
cat > /etc/nginx/sites-available/custom_404 <<EOF
server {
    listen 80;
    server_name _;

    root /var/www/html;
    index index.html index.htm;

    # Custom 404 error page
    error_page 404 /404.html;
    location = /404.html {
        internal;
    }
}
EOF

# Enable the new configuration
ln -sf /etc/nginx/sites-available/custom_404 /etc/nginx/sites-enabled/

# Test the Nginx configuration
nginx -t

# Restart Nginx to apply changes
systemctl restart nginx

echo "Custom 404 page configured successfully."

